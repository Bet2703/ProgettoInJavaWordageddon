<?xml version="1.0" encoding="UTF-8"?>

<!-- QuizView.fxml - Fancy Version -->

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #4ca1af);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.QuestionsController">
    <children>
        <!-- Card container -->
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15;" AnchorPane.bottomAnchor="30" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="30">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <effect>
                <DropShadow color="#00000040" offsetY="4" radius="10" spread="0.2" />
            </effect>
           <children>
   
               <!-- Question Label -->
               <Label fx:id="questionLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Qual è la parola più frequente?" wrapText="true" />
   
               <!-- Options -->
               <VBox alignment="CENTER_LEFT" spacing="10">
                   <children>
                       <RadioButton fx:id="optionA" style="-fx-font-size: 16px; -fx-text-fill: #34495e;" text="Opzione A" />
                       <RadioButton fx:id="optionB" style="-fx-font-size: 16px; -fx-text-fill: #34495e;" text="Opzione B" />
                       <RadioButton fx:id="optionC" style="-fx-font-size: 16px; -fx-text-fill: #34495e;" text="Opzione C" />
                       <RadioButton fx:id="optionD" style="-fx-font-size: 16px; -fx-text-fill: #34495e;" text="Opzione D" />
                   </children>
               </VBox>
   
               <!-- Action Buttons -->
               <HBox alignment="CENTER" spacing="15">
                   <children>
                       <Button fx:id="submitButton" onAction="#onSubmitAnswer" prefHeight="35" prefWidth="100" style="-fx-background-color: #27ae60; -fx-text-fill: white;                                    -fx-background-radius: 8; -fx-font-size: 14px;" text="Invia" />
                       <Button fx:id="skipButton" onAction="#onSkipQuestion" prefHeight="35" prefWidth="100" style="-fx-background-color: #e67e22; -fx-text-fill: white;                                    -fx-background-radius: 8; -fx-font-size: 14px;" text="Salta" />
                   </children>
               </HBox>
   
               <!-- Feedback Label -->
               <Label fx:id="feedbackLabel" style="-fx-font-size: 14px; -fx-text-fill: #c0392b;" text="Puoi inserire una risposta" textFill="RED" wrapText="true" />
           </children>
        </VBox>
    </children>
</AnchorPane>
