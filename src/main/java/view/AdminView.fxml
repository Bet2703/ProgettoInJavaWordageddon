<?xml version="1.0" encoding="UTF-8"?>
<!-- AdminView.fxml - Caricamento Documenti -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.AdminController"
            prefWidth="800" prefHeight="400"
            style="-fx-background-color: linear-gradient(to bottom, #8e44ad, #3498db);">

    <children>
        <HBox spacing="20" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

            <!-- Barra laterale sinistra -->
            <VBox spacing="20" alignment="TOP_CENTER"
                  prefWidth="180"
                  style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10;">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                </padding>

                <Button fx:id="btnLoadDocs"
                        text="Carica Documento"
                        onAction="#onLoadDocuments"
                        prefWidth="140" prefHeight="35"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 6;"/>

                <Button fx:id="btnDeleteDoc"
                        text="Cancella Documento"
                        onAction="#onDeleteDocument"
                        prefWidth="140" prefHeight="35"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 6;"/>

                <Button fx:id="btnBack"
                        text="Indietro"
                        onAction="#onBackToLogin"
                        prefWidth="140" prefHeight="35"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 6;"/>
            </VBox>

            <!-- Contenuto principale -->
            <VBox alignment="TOP_CENTER" spacing="20"
                  VBox.vgrow="ALWAYS"
                  style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10;"
                  maxWidth="Infinity">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                </padding>

                <Label text="Pannello Amministratore"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <Label text="Documenti caricati:"
                       style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;"/>
                <ListView fx:id="documentsList" prefHeight="180"/>

                <Label fx:id="messageLabel" wrapText="true"
                       style="-fx-font-size: 14px; -fx-text-fill: #c0392b;"/>
            </VBox>

        </HBox>
    </children>
</AnchorPane>
