<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.MainMenuController"
            prefWidth="600" prefHeight="450"
            style="-fx-background-color: linear-gradient(to bottom right, #89f7fe, #66a6ff);">

    <children>
        <!-- Cerchio decorativo top-right -->
        <StackPane prefWidth="600" prefHeight="450">
            <children>
                <Circle radius="180"
                        fill="rgba(255,255,255,0.1)"
                        StackPane.alignment="TOP_RIGHT"/>
            </children>
            <!-- Qui il margin corretto -->
            <StackPane.margin>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </StackPane.margin>
        </StackPane>

        <!-- Card centrale -->
        <VBox alignment="CENTER" spacing="30"
              AnchorPane.topAnchor="50"
              AnchorPane.leftAnchor="100"
              AnchorPane.rightAnchor="100"
              AnchorPane.bottomAnchor="50"
              style="-fx-background-color: rgba(255,255,255,0.8);
                     -fx-background-radius: 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20,0,0,0);">
            <!-- padding corretto -->
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            <effect>
                <DropShadow radius="10" offsetY="5" color="#00000033"/>
            </effect>
            <children>
                <Label text="WORDAGEDDON"
                       style="-fx-font-size: 36px;
                              -fx-font-weight: bold;
                              -fx-letter-spacing: 2px;
                              -fx-text-fill: #34495e;"/>
                <VBox spacing="15" alignment="CENTER">
                    <children>
                        <Button fx:id="playButton" text="🎮 GIOCA" onAction="#onPlayClicked"
                                prefWidth="240" prefHeight="50"
                                style="-fx-background-color: #2ecc71;
                                       -fx-text-fill: white;
                                       -fx-font-size: 18px;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 10;
                                       -fx-cursor: hand;"/>
                        <Button fx:id="profileButton" text="👤 PROFILO" onAction="#onProfileClicked"
                                prefWidth="240" prefHeight="50"
                                style="-fx-background-color: #f1c40f;
                                       -fx-text-fill: white;
                                       -fx-font-size: 18px;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 10;
                                       -fx-cursor: hand;"/>
                        <Button fx:id="leaderboardButton" text="🏆 CLASSIFICA" onAction="#onLeaderboardClicked"
                                prefWidth="240" prefHeight="50"
                                style="-fx-background-color: #e74c3c;
                                       -fx-text-fill: white;
                                       -fx-font-size: 18px;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 10;
                                       -fx-cursor: hand;"/>
                        <Button fx:id="exitButton" text="🚪 ESCI" onAction="#onExitClicked"
                                prefWidth="240" prefHeight="50"
                                style="-fx-background-color: #3498db;
                                       -fx-text-fill: white;
                                       -fx-font-size: 18px;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 10;
                                       -fx-cursor: hand;"/>
                    </children>
                </VBox>
            </children>
        </VBox>

        <!-- Footer -->
        <Label text="© 2025 Wordageddon – Gruppo 6"
               style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"
               AnchorPane.bottomAnchor="15"
               AnchorPane.rightAnchor="20"/>
    </children>
</AnchorPane>
