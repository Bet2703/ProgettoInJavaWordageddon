<?xml version="1.0" encoding="UTF-8"?>
<!-- ProfileView.fxml - Gestione Profilo Utente Avanzata -->
<?import javafx.scene.effect.DropShadow?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.UserManagementViewController"
            prefWidth="600" prefHeight="450"
            style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);">
    <children>
        <VBox spacing="20" alignment="TOP_CENTER"
              AnchorPane.topAnchor="20" AnchorPane.leftAnchor="40"
              AnchorPane.rightAnchor="40" AnchorPane.bottomAnchor="80" 
              style="-fx-background-color: white; -fx-background-radius: 12;"><!-- Modificato per lasciare spazio al bottone Gioca -->
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>
            <effect>
                <DropShadow radius="12" spread="0.2" offsetY="6" color="#00000040"/>
            </effect>

            <Label text="Area Profilo" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

            <GridPane hgap="10" vgap="15" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30" />
                    <ColumnConstraints percentWidth="70" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="30" />
                    <RowConstraints minHeight="30" />
                    <RowConstraints minHeight="30" />
                </rowConstraints>
                <children>
                    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="tfUsername" promptText="Inserisci nuovo username" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <PasswordField fx:id="pfPassword" promptText="Nuova password" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="Conferma Password:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <PasswordField fx:id="pfConfirm" promptText="Ripeti password" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                </children>
            </GridPane>

            <Label fx:id="lblBestScore"
                   text="${controller.bestScoreText}"
                   style="-fx-font-size: 18px; -fx-text-fill: #16a085;"/>

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="btnSave" text="Salva" onAction="#onSaveProfile"
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 5;"
                        prefWidth="100" prefHeight="35" />
                <Button fx:id="btnCancel" text="Annulla" onAction="#onCancel"
                        style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-background-radius: 5;"
                        prefWidth="100" prefHeight="35" />
                <Button fx:id="btnExportCsv" text="Esporta CSV" onAction="#onExportCsv"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5;"
                        prefWidth="120" prefHeight="35" />
            </HBox>

            <Label fx:id="lblStatus" wrapText="true" style="-fx-text-fill: #c0392b;" />
        </VBox>
        
        <!-- Bottone Gioca posizionato in basso al centro -->
        <Button text="Gioca" onAction="#onPlayGame"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5;"
                prefWidth="120" prefHeight="40"
                AnchorPane.bottomAnchor="20"
                AnchorPane.leftAnchor="240"/> <!-- Posizionato al centro (600/2 - 120/2 = 240) -->
    </children>
</AnchorPane>