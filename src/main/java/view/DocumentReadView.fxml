<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.DocumentReadController"
            prefWidth="600" prefHeight="400"
            style="-fx-background-color: linear-gradient(to bottom right, #f6d365, #fda085);">

    <children>
        <VBox spacing="15" alignment="TOP_CENTER"
              AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20"
              style="-fx-background-color: rgba(255,255,255,0.85);
                     -fx-background-radius: 12;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10,0,0,2);">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Titolo -->
            <Label text="Leggi il documento"
                   style="-fx-font-size: 22px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #34495e;"/>

            <!-- Area di testo per il contenuto -->
            <TextArea fx:id="documentTextArea"
                      wrapText="true"
                      editable="false"
                      prefHeight="260"
                      style="-fx-font-size: 14px;
                             -fx-control-inner-background: #fcfcfc;
                             -fx-background-insets: 0;"/>

            <!-- Timer gestito dal controller -->
            <HBox alignment="CENTER_RIGHT" prefWidth="Infinity">
                <Label fx:id="timerLabel"
                       style="-fx-font-size: 16px;
                              -fx-font-weight: bold;
                              -fx-text-fill: #c0392b;
                              -fx-background-color: #fdecea;
                              -fx-padding: 4 12;
                              -fx-background-radius: 6;"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
