<?xml version="1.0" encoding="UTF-8"?>
<!-- ResultsView.fxml - Visualizzazione Punteggio -->
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ResultsController"
            prefWidth="600" prefHeight="400"
            style="-fx-background-color: linear-gradient(to bottom, #34495e, #2c3e50);">

    <children>
        <VBox alignment="CENTER" spacing="20"
              AnchorPane.topAnchor="50" AnchorPane.leftAnchor="100"
              AnchorPane.rightAnchor="100" AnchorPane.bottomAnchor="50"
              style="-fx-background-color: rgba(255,255,255,0.85); -fx-background-radius: 10;">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Titolo Risultati -->
            <Label text="Risultati del Quiz"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <!-- Numero Risposte Corrette -->
            <Label fx:id="correctCountLabel"
           text="${controller.resultText}"
           wrapText="true"
           alignment="CENTER"
           style="-fx-font-size: 18px; -fx-text-fill: #2c3e50;"/>

            <!-- Pulsanti Azione -->
            <Button fx:id="btnHome"
                    text="Torna al Menu"
                    onAction="#onBackToMenu"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8;"
                    prefWidth="150" prefHeight="40"/>
        </VBox>
    </children>
</AnchorPane>
