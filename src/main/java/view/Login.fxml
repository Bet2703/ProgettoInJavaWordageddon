<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="401.0" prefWidth="499.0" style=" -fx-background-size: cover;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <children>

        <StackPane prefHeight="401.0" prefWidth="499.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <children>
                <VBox fx:id="card" alignment="CENTER" maxWidth="300" spacing="20" style="-fx-background-color: rgba(255,255,255,0.85); -fx-background-radius: 20; -fx-padding: 30;">
                    <effect>
                        <DropShadow color="#00000040" offsetY="4" radius="10" spread="0.2" />
                    </effect>
                    <children>
                        <!-- Titolo dell'app -->
                        <Label style="-fx-font-size: 24px; -fx-text-fill: #333; -fx-font-weight: bold;" text="Wordageddon" />
                        <!-- Input Fields -->
                        <TextField fx:id="usernameField" promptText="Username" style="-fx-prompt-text-fill: derive(-fx-control-inner-background, -30%);" />
                        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-prompt-text-fill: derive(-fx-control-inner-background, -30%);" />
                        <!-- Buttons -->
                        <HBox alignment="CENTER" spacing="15">
                            <children>
                                <Button fx:id="loginButton" onAction="#onLogin" prefHeight="30" prefWidth="100" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Login" />
                                <Button fx:id="registerButton" onAction="#onRegister" prefHeight="30" prefWidth="100" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5;" text="Registrati" />
                            </children>
                        </HBox>
                        <!-- Message Label -->
                        <Label fx:id="messageLabel" textFill="#C62828" wrapText="true" />
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>
