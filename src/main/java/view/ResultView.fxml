<?xml version="1.0" encoding="UTF-8"?>

<!-- ResultsView.fxml - Visualizzazione Migliorata dei Risultati -->

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane prefHeight="450" prefWidth="600" style="-fx-background-color: linear-gradient(to bottom, #34495e, #2c3e50);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ResultsController">

    <children>

        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0.5, 0, 0);" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>
   <children>
   
               <!-- Titolo Risultati -->
               <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Risultati del Quiz" />
   
               <!-- Messaggio Personalizzato -->
               <Label fx:id="feedbackMessage" alignment="CENTER" style="-fx-font-size: 20px; -fx-font-style: italic; -fx-text-fill: #16a085;" text="Ottimo lavoro! Hai completato il quiz!" wrapText="true" />
   
               <!-- Numero Risposte Corrette -->
               <Label fx:id="correctCountLabel" alignment="CENTER" style="-fx-font-size: 18px; -fx-text-fill: #2c3e50;" text="Risposte corrette: " wrapText="true" />
   
               <!-- Pulsanti Azione -->
               <HBox alignment="CENTER" spacing="20">
      <children>
                      <!-- Pulsante Torna al menu -->
                      <Button fx:id="btnHome" onAction="#onBackToMenu" prefHeight="40" prefWidth="150" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8;" text="Torna al Menu" />
      
                      <!-- Pulsante Ripeti Quiz -->
                      <Button fx:id="btnRetry" onAction="#onRetryQuiz" prefHeight="40" prefWidth="150" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8;" text="Riprova" />
      </children>
   
               </HBox>
            <Button fx:id="btnPersonalScores" onAction="#onScores" prefHeight="40" prefWidth="150" style="-fx-background-color: #dc143c; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8;" text="Classifica Personale" />
   </children>
        </VBox>
    </children>
</AnchorPane>
