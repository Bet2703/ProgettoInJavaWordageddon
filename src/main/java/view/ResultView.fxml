<?xml version="1.0" encoding="UTF-8"?>
<!-- ResultsView.fxml - Visualizzazione Migliorata dei Risultati -->
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ResultsController"
            prefWidth="600" prefHeight="450"
            style="-fx-background-color: linear-gradient(to bottom, #34495e, #2c3e50);">

    <children>

        <!-- Pulsante Torna al Menu in alto a sinistra -->
        <Button fx:id="btnHomeTop"
                text="← Menu"
                onAction="#onBackToMenu"
                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"
                AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"/>

        <VBox alignment="CENTER" spacing="20"
              AnchorPane.topAnchor="50" AnchorPane.leftAnchor="50"
              AnchorPane.rightAnchor="50" AnchorPane.bottomAnchor="50"
              style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0.5, 0, 0);">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Titolo Risultati -->
            <Label text="Risultati del Quiz"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <!-- Messaggio Personalizzato -->
            <Label fx:id="feedbackMessage"
                   text="Ottimo lavoro! Hai completato il quiz!"
                   wrapText="true"
                   alignment="CENTER"
                   style="-fx-font-size: 20px; -fx-font-style: italic; -fx-text-fill: #16a085;"/>

            <!-- Numero Risposte Corrette -->
            <Label fx:id="correctCountLabel"
                   text="Risposte corrette: "
                   wrapText="true"
                   alignment="CENTER"
                   style="-fx-font-size: 18px; -fx-text-fill: #2c3e50;"/>

            <!-- Pulsanti Azione -->
            <HBox alignment="CENTER" spacing="20">
                <!-- Pulsante Torna al menu -->
                <Button fx:id="btnHome"
                        text="Torna al Menu"
                        onAction="#onBackToMenu"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8;"
                        prefWidth="150" prefHeight="40"/>

                <!-- Pulsante Ripeti Quiz -->
                <Button fx:id="btnRetry"
                        text="Riprova"
                        onAction="#onRetryQuiz"
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8;"
                        prefWidth="150" prefHeight="40"/>

            </HBox>
        </VBox>
    </children>
</AnchorPane>