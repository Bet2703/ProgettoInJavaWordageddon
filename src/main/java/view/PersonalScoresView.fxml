<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600" prefWidth="800"
            style="-fx-background-color: linear-gradient(to bottom right, #e0f7fa, #e1bee7);"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.PersonalScoresViewController">

    <top>
        <BorderPane style="-fx-background-color: #4a148c; -fx-padding: 10;">
            <center>
                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <Label style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;"
                               text="Personal Scores"/>
                        <Button fx:id="sortButton" onAction="#handleChangeSort"
                                style="-fx-background-color: #ce93d8; -fx-text-fill: #4a148c;"
                                text="Change Sort Mode"/>
                    </children>
                </HBox>
            </center>
            <right>
                <Button fx:id="backToMenuButton" onAction="#handleBackToMenu"
                        text="Torna al menu"
                        style="-fx-background-color: #ce93d8; -fx-text-fill: #4a148c; -fx-font-weight: bold;"/>
            </right>
        </BorderPane>
    </top>

    <center>
        <TabPane fx:id="difficultyTabs" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab fx:id="easySelector" onSelectionChanged="#showEasyScore" text="EASY">
                    <content>
                        <TableView fx:id="easyTable">
                            <columns>
                                <TableColumn fx:id="easyTitleColumn" prefWidth="130.0" text="Title"/>
                                <TableColumn fx:id="easyScoreColumn" prefWidth="351.0" text="Score"/>
                                <TableColumn fx:id="easyDateColumn" prefWidth="315.0" text="Date"/>
                            </columns>
                        </TableView>
                    </content>
                </Tab>
                <Tab fx:id="mediumSelector" onSelectionChanged="#showMediumScore" text="MEDIUM">
                    <content>
                        <TableView fx:id="mediumTable">
                            <columns>
                                <TableColumn fx:id="mediumTitleColumn" prefWidth="126.0" text="Title"/>
                                <TableColumn fx:id="mediumScoreColumn" prefWidth="356.0" text="Score"/>
                                <TableColumn fx:id="mediumDateColumn" prefWidth="316.0" text="Date"/>
                            </columns>
                        </TableView>
                    </content>
                </Tab>
                <Tab fx:id="hardSelector" onSelectionChanged="#showHardScore" text="HARD">
                    <content>
                        <TableView fx:id="hardTable">
                            <columns>
                                <TableColumn fx:id="hardTitleColumn" prefWidth="125.0" text="Title"/>
                                <TableColumn fx:id="hardScoreColumn" prefWidth="350.0" text="Score"/>
                                <TableColumn fx:id="hardDateColumn" prefWidth="323.0" text="Date"/>
                            </columns>
                        </TableView>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
