<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.LoadDocumentDialogController"
      style="-fx-background-color: white; -fx-padding: 20;">

    <Label text="Seleziona documento e difficoltà" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Button fx:id="chooseFileBtn" text="Scegli file" onAction="#onChooseFile"/>
        <Label fx:id="fileNameLabel" text="Nessun file selezionato"/>
    </HBox>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Difficoltà:"/>
        <HBox spacing="10">
            <RadioButton fx:id="easyRadio" text="Easy"/>
            <RadioButton fx:id="mediumRadio" text="Medium"/>
            <RadioButton fx:id="hardRadio" text="Hard"/>
        </HBox>
    </VBox>

    <HBox spacing="20" alignment="CENTER">
        <Button text="OK" onAction="#onConfirm"/>
        <Button text="Cancella" onAction="#onCancel"/>
    </HBox>

</VBox>